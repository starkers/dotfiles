# # GAP VARIABLES
set $inner 32
set $outer 0

gaps inner $inner
gaps outer $outer

# gaps inner $default_gaps_inner
# gaps outer $default_gaps_outer


set $thick 2
# i3-gaps-rounded only
# border_radius 6


# toggle gaps
bindsym $mod+Shift+g exec compton; gaps inner all set $inner; gaps outer all set $outer
bindsym $mod+g exec compton; gaps inner all set 0; gaps outer all set 0


workspace_auto_back_and_forth yes
force_display_urgency_hint 0 ms
focus_on_window_activation urgent

floating_minimum_size -1 x -1
floating_maximum_size -1 x -1

new_window pixel
# smart_gaps on
for_window [class="^.*"] border pixel $thick

hide_edge_borders both

font pango:Hack Nerd Font Regular 9
# font pango:Noto Sans 8


